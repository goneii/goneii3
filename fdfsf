#include <iostream>
#include <string.h>
using namespace std;

class Member {
public:
	string name[20];
	string id[20];
	string password[20];

	string getName(string name) {
		return name;
	}
	string getId(string id) {
		return id;
	}
	string getPassword(string password) {
		return password;
	}
	string Name;
	string Id;
	string Password;

	string SetName() {
		cout << "이름 : " << endl;
		cin >> Name;
		return Name;
	}
	string SetId() {
		cout << "아이디 : " << endl;
		cin >> Id;
		return Id;
	}
	string SetPassword() {
		cout << "비밀번호 : " << endl;
		cin >> Password;
		return Password;
	}

	void Login(string name, string Id, string Password) {
		cout << "아이디: ";
		string id;
		cin >> id;

		cout << "비밀번호 : ";
		string pass;
		cin >> pass;

		if (Id == id && Password == pass) {
			cout << "=======로그인 성공 ========" << endl;
			cout << Name << "님 환영합니다." << endl;
		}
		else {
			cout << "아이디 혹은 비밀번호가 틀렸습니다." << endl;
		}
	}

};

class Cart {
public:
	int num;
	int bag_course() {
		cout << "추가할 학수 번호>> ";
		cin >> num;
		return num;
		
	}
};
int main() {
	string Name, ID, Password;
	int input;
	while (1) {
		cout << "1. 회원가입" << endl;
		cout << "2. 로그인" << endl << endl;
		cout << "번호를 입력하세요 >> ";
		cin >> input;
		cout << "---------------------------------------" << endl;

		if (input == 1)
		{
			Name = SetName();
			ID = SetId();
			Password = SetPassword();  // 여기서 왜 에러가 나는지 모르겠어요..

			cout << "=== 회원가입 성공 ===" << endl << endl;
		}
	}
